<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme using Material3 DayNight to support light/dark -->
    <!-- Classic Theme - Traditional Black on White -->
    <style name="Base.Theme.MusicReader" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/classic_primary</item>
        <item name="colorOnPrimary">@color/classic_on_primary</item>
        <item name="colorPrimaryContainer">@color/classic_tertiary</item>
        <item name="colorOnPrimaryContainer">@color/classic_on_tertiary</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/classic_secondary</item>
        <item name="colorOnSecondary">@color/classic_on_secondary</item>
        <item name="colorSecondaryContainer">@color/classic_surface_variant</item>
        <item name="colorOnSecondaryContainer">@color/classic_on_surface_variant</item>

        <!-- Tertiary colors -->
        <item name="colorTertiary">@color/classic_tertiary</item>
        <item name="colorOnTertiary">@color/classic_on_tertiary</item>

        <!-- Error colors -->
        <item name="colorError">@color/classic_error</item>
        <item name="colorOnError">@color/classic_on_error</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/classic_surface</item>
        <item name="colorOnSurface">@color/classic_on_surface</item>
        <item name="colorSurfaceVariant">@color/classic_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/classic_on_surface_variant</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/classic_background</item>
        <item name="colorOnBackground">@color/classic_on_background</item>

        <!-- Outline -->
        <item name="colorOutline">@color/classic_outline</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/classic_background</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/classic_background</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
    <style name="Theme.MusicReader.Light" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/classic_primary</item>
        <item name="colorOnPrimary">@color/classic_on_primary</item>
        <item name="colorPrimaryContainer">@color/classic_tertiary</item>
        <item name="colorOnPrimaryContainer">@color/classic_on_tertiary</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/classic_secondary</item>
        <item name="colorOnSecondary">@color/classic_on_secondary</item>
        <item name="colorSecondaryContainer">@color/classic_surface_variant</item>
        <item name="colorOnSecondaryContainer">@color/classic_on_surface_variant</item>

        <!-- Tertiary colors -->
        <item name="colorTertiary">@color/classic_tertiary</item>
        <item name="colorOnTertiary">@color/classic_on_tertiary</item>

        <!-- Error colors -->
        <item name="colorError">@color/classic_error</item>
        <item name="colorOnError">@color/classic_on_error</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/classic_surface</item>
        <item name="colorOnSurface">@color/classic_on_surface</item>
        <item name="colorSurfaceVariant">@color/classic_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/classic_on_surface_variant</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/classic_background</item>
        <item name="colorOnBackground">@color/classic_on_background</item>

        <!-- Outline -->
        <item name="colorOutline">@color/classic_outline</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/classic_background</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/classic_background</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <!-- Toolbar style remains Material3 -->
    <style name="ToolbarShapeAppearance" parent="Widget.Material3.Toolbar">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
</resources>