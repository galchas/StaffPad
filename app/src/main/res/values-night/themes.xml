<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme using Material3 DayNight for dark mode -->
    <style name="Theme.MusicReader.Night" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/night_primary</item>
        <item name="colorOnPrimary">@color/night_on_primary</item>
        <item name="colorPrimaryContainer">@color/night_tertiary</item>
        <item name="colorOnPrimaryContainer">@color/night_on_tertiary</item>

        <item name="colorSecondary">@color/night_secondary</item>
        <item name="colorOnSecondary">@color/night_on_secondary</item>
        <item name="colorSecondaryContainer">@color/night_surface_variant</item>
        <item name="colorOnSecondaryContainer">@color/night_on_surface_variant</item>

        <item name="colorTertiary">@color/night_tertiary</item>
        <item name="colorOnTertiary">@color/night_on_tertiary</item>

        <item name="colorError">@color/night_error</item>
        <item name="colorOnError">@color/night_on_error</item>

        <item name="colorSurface">@color/night_surface</item>
        <item name="colorOnSurface">@color/night_on_surface</item>
        <item name="colorSurfaceVariant">@color/night_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/night_on_surface_variant</item>

        <item name="android:colorBackground">@color/night_background</item>
        <item name="colorOnBackground">@color/night_on_background</item>

        <item name="colorOutline">@color/night_outline</item>

        <item name="android:statusBarColor">@color/night_background</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="android:navigationBarColor">@color/night_background</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
</resources>