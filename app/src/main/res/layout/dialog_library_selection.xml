<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- All Sheets Option -->
    <LinearLayout
        android:id="@+id/all_sheets_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/round_home_24"
            android:contentDescription="@string/all_sheets" />

        <TextView
            android:id="@+id/all_sheets_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="@string/all_sheets"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/all_sheets_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 sheets" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Libraries List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/library_selection_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="200dp"
        android:maxHeight="400dp" />

    <!-- Create New Library Button -->
    <Button
        android:id="@+id/create_new_library_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/create_new_library"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
</LinearLayout>