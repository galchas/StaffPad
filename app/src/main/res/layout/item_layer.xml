<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <CheckBox
        android:id="@+id/layer_active_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/layer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Layer"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/layer_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textSize="12sp"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/button_up"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="Move up"
        android:src="@drawable/round_arrow_back_ios_24"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/button_down"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="Move down"
        android:src="@drawable/round_arrow_forward_ios_24"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/button_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="Delete"
        android:src="@drawable/round_delete_forever_24"
        android:background="@android:color/transparent"/>

</LinearLayout>