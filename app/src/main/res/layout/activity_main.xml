<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MotionLayoutInvalidSceneFileReference">
    <!-- Custom Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/app_toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#E6F0F0F0"
        android:elevation="2dp"
        app:contentInsetStart="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Left Side Toolbar Buttons -->
            <LinearLayout
                android:id="@+id/left_toolbar_buttons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/library_button"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Library"
                    android:padding="12dp"
                    android:src="@drawable/baseline_menu_book_24"
                    app:tint="#404040" />

                <ImageButton
                    android:id="@+id/bookmarks_button"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Bookmarks"
                    android:padding="12dp"
                    android:src="@drawable/baseline_bookmark_24"
                    app:tint="#404040" />

                <ImageButton
                    android:id="@+id/setlist_button"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Setlist"
                    android:padding="12dp"
                    android:src="@drawable/baseline_format_list_bulleted_24"
                    app:tint="#404040" />
            </LinearLayout>

            <!-- Center Toolbar Section -->
            <LinearLayout
                android:id="@+id/center_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/display_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/single_page"
                    android:textColor="#505050"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/sheet_title"
                    android:textColor="#404040"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/page_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_1_12"
                    android:textColor="#505050"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Right Side Toolbar Buttons -->
            <LinearLayout
                android:id="@+id/right_toolbar_buttons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/tools_button"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Tools"
                    android:padding="12dp"
                    android:src="@drawable/round_cases_24"
                    app:tint="#404040" />

                <ImageButton
                    android:id="@+id/metronome_button"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Metronome"
                    android:padding="12dp"
                    android:src="@drawable/baseline_metronome_temp"
                    app:tint="#404040" />

                <ImageButton
                    android:id="@+id/search_button"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Search"
                    android:padding="12dp"
                    android:src="@drawable/round_search_24"
                    app:tint="#404040" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Hidden PianoView to preload audio samples at app startup -->
    <FrameLayout
        android:id="@+id/piano_preload_container"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:alpha="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_toolbar">
        <com.chengtao.pianoview.view.PianoView
            android:id="@+id/pv_preload"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <!-- Main Content Area (Score View) -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_toolbar" />
    <!-- Scrim overlay for dimming content when sidebar is open -->
    <View
        android:id="@+id/scrim_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Library Sidebar -->
    <LinearLayout
        android:id="@+id/library_sidebar"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/white">

        <!-- Header area with text buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Text buttons row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/library_button_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Library"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/import_button_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Import"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/edit_button_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Edit"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Filter buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/composers_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Composers"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/genres_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Genres"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <Button
                    android:id="@+id/tags_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tags"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/labels_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Labels"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/library_content_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/library_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:clipToPadding="false"
                android:padding="8dp"
                android:layout_marginTop="60dp"/>
        </FrameLayout>

        <!-- Resize handle -->
        <View
            android:id="@+id/library_resize_handle"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@android:color/darker_gray" />

    </LinearLayout>
    <!-- Bookmarks Sidebar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bookmarks_sidebar"
        android:layout_width="320dp"
        android:layout_height="0dp"
        android:background="#F8F8F8"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Bookmarks Top Buttons -->
        <LinearLayout
            android:id="@+id/bookmarks_top_buttons"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/indexes_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="@string/indexes"
                android:textColor="#404040"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />

            <ImageButton
                android:id="@+id/add_bookmark_button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/add"
                android:padding="12dp"
                android:src="@drawable/outline_edit_24"
                app:tint="#404040" />

            <ImageButton
                android:id="@+id/edit_bookmarks_button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/edit"
                android:padding="12dp"
                android:src="@drawable/round_edit_note_24"
                app:tint="#404040" />
        </LinearLayout>

        <TextView
            android:id="@+id/bookmarks_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/bookmarks"
            android:textColor="#606060"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bookmarks_top_buttons" />

        <LinearLayout
            android:id="@+id/bookmarks_category_buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bookmarks_title">

            <Button
                android:id="@+id/page_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:backgroundTint="#E0E0E0"
                android:text="@string/page"
                android:textColor="#404040" />

            <Button
                android:id="@+id/title_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:backgroundTint="#E0E0E0"
                android:text="@string/title"
                android:textColor="#404040" />

            <Button
                android:id="@+id/flags_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:backgroundTint="#E0E0E0"
                android:text="@string/flags"
                android:textColor="#404040" />

            <Button
                android:id="@+id/toc_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#E0E0E0"
                android:text="@string/toc"
                android:textColor="#404040" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bookmarks_recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bookmarks_category_buttons" />

        <!-- Resize handle -->
        <View
            android:id="@+id/bookmarks_resize_handle"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="#DDDDDD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Setlist Sidebar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setlist_sidebar"
        android:layout_width="320dp"
        android:layout_height="0dp"
        android:background="#F8F8F8"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Setlist Top Buttons -->
        <LinearLayout
            android:id="@+id/setlist_top_buttons"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/setlist_title_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="@string/setlist"
                android:textColor="#404040"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/add_setlist_button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/add"
                android:padding="12dp"
                android:src="@drawable/round_add_24"
                app:tint="#404040" />

            <ImageButton
                android:id="@+id/edit_setlist_button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/edit"
                android:padding="12dp"
                android:src="@drawable/outline_edit_24"
                app:tint="#404040" />
        </LinearLayout>

        <TextView
            android:id="@+id/setlist_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/setlist"
            android:textColor="#606060"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setlist_top_buttons" />

        <LinearLayout
            android:id="@+id/setlist_category_buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setlist_subtitle">

            <Button
                android:id="@+id/manual_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:backgroundTint="#E0E0E0"
                android:text="@string/manual"
                android:textColor="#404040" />

            <Button
                android:id="@+id/setlist_title_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:backgroundTint="#E0E0E0"
                android:text="@string/edit"
                android:textColor="#404040" />

            <Button
                android:id="@+id/fresh_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#E0E0E0"
                android:text="@string/fresh"
                android:textColor="#404040" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/setlist_recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setlist_category_buttons" />

        <!-- Resize handle -->
        <View
            android:id="@+id/setlist_resize_handle"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="#DDDDDD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Page Options Menu -->
    <androidx.cardview.widget.CardView
        android:id="@+id/page_options_menu"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/share_pdf_option"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/share_pdf"
                android:textColor="#404040"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/page_properties_option"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/page_properties"
                android:textColor="#404040"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/show_in_library_option"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/show_in_library"
                android:textColor="#404040"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/new_tab_option"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/new_tab"
                android:textColor="#404040"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/new_window_option"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/new_window"
                android:textColor="#404040"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/add_to_setlist_option"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/add_to_setlist"
                android:textColor="#404040"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/delete_option"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/delete"
                android:textColor="#FF0000"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Tools Menu Sidebar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tools_sidebar"
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:background="#F8F8F8"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tools_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/tools"
            android:textColor="#404040"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tools_recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tools_title" />

        <!-- Resize handle -->
        <View
            android:id="@+id/tools_resize_handle"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="#DDDDDD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Search Dialog -->
    <androidx.cardview.widget.CardView
        android:id="@+id/search_dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:visibility="gone"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="400dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/search"
                android:textColor="#404040"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/search_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/editbox_background"
                android:hint="@string/enter_search_term"
                android:padding="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="end"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancel_search_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#E0E0E0"
                    android:text="@string/cancel"
                    android:textColor="#404040" />

                <Button
                    android:id="@+id/submit_search_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#4285F4"
                    android:text="@string/search"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.motion.widget.MotionLayout>