<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MotionLayoutInvalidSceneFileReference">
    <!-- Custom Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/app_toolbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        app:contentInsetStart="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Floating Left Toolbar (Material 3) -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/left_toolbar_buttons"
        style="@style/Widget.Material3.Toolbar"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="?attr/colorSurface"
        android:elevation="6dp"
        android:theme="@style/ThemeOverlay.Material3.ActionBar"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/library_button"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/library"
            android:padding="12dp"
            android:src="@drawable/baseline_menu_book_24"
            app:tint="#404040" />

        <ImageButton
            android:id="@+id/bookmarks_button"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/bookmarks"
            android:padding="12dp"
            android:src="@drawable/baseline_bookmark_24"
            app:tint="#404040" />

        <ImageButton
            android:id="@+id/setlist_button"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/setlist"
            android:padding="12dp"
            android:src="@drawable/baseline_format_list_bulleted_24"
            app:tint="#404040" />
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Floating Center Toolbar (Material 3) -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/center_toolbar"
        style="@style/Widget.Material3.Toolbar"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="8dp"
        android:backgroundTint="?attr/colorSurface"
        android:elevation="6dp"
        android:theme="@style/ThemeOverlay.Material3.ActionBar"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/display_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/single_page"
            android:textColor="#505050"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:text="@string/sheet_title"
            android:textColor="#404040"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/page_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_1_12"
            android:textColor="#505050"
            android:textSize="14sp" />
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Center Search Toolbar (Material 3) -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/center_search_toolbar"
        style="@style/Widget.Material3.Toolbar"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/blue_background"
        android:elevation="6dp"
        android:visibility="gone"

        android:theme="@style/ThemeOverlay.Material3.ActionBar"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/close_search_button"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cancel"
            android:padding="12dp"
            android:src="@drawable/round_close_24"
            app:tint="@color/blue_on_tertiary" />

        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:hint="@string/search"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textColor="@color/blue_on_tertiary"
            android:textColorHint="#808080"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/ok_search_button"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/ok"
            android:padding="12dp"
            android:src="@drawable/ic_ok_v_24"
            app:tint="@color/blue_on_tertiary" />

    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Floating Right Toolbar (Material 3) -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/right_toolbar_buttons"
        style="@style/Widget.Material3.Toolbar"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:elevation="6dp"
        android:theme="@style/ThemeOverlay.Material3.ActionBar"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/tools_button"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/tools"
                    android:padding="12dp"
                    android:src="@drawable/round_cases_24"
                    app:tint="@color/blue_on_tertiary" />

        <ImageButton
            android:id="@+id/metronome_button"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/metronome"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/metronome_svgrepo_com"
            app:tint="@color/blue_on_tertiary"
            tools:layout_editor_absoluteX="64dp" />

                <ImageButton
                    android:id="@+id/search_button"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/search"
                    android:padding="12dp"
                    android:src="@drawable/round_search_24"
                    app:tint="@color/blue_on_tertiary" />
            </com.google.android.material.appbar.MaterialToolbar>

    <!-- Hidden PianoView to preload audio samples at app startup -->
    <FrameLayout
        android:id="@+id/piano_preload_container"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:alpha="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_toolbar">
        <com.chengtao.pianoview.view.PianoView
            android:id="@+id/pv_preload"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <!-- Main Content Area (Score View) -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blue_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_toolbar" />
    <!-- Scrim overlay for dimming content when sidebar is open -->
    <View
        android:id="@+id/scrim_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blue_on_surface"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Library Sidebar -->
    <LinearLayout
        android:id="@+id/library_sidebar"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/blue_background">

        <!-- Header area with text buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Text buttons row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/library_button_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/library"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/import_button_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/import_text"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/edit_button_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/edit"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Filter buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/composers_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/composers"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/genres_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/genres"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <Button
                    android:id="@+id/tags_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tags"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/labels_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/labels"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/library_content_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/search_results_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="@string/search_results"
                android:textColor="@color/blue_on_surface"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_results_recycler"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@android:color/white"
                android:clipToPadding="false"
                android:padding="8dp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/library_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:clipToPadding="false"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Resize handle -->
        <View
            android:id="@+id/library_resize_handle"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/blue_background" />

    </LinearLayout>
    <!-- Bookmarks Sidebar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bookmarks_sidebar"
        android:layout_width="320dp"
        android:layout_height="0dp"
        android:background="@color/blue_background"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Bookmarks Top Buttons -->
        <LinearLayout
            android:id="@+id/bookmarks_top_buttons"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/indexes_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="@string/indexes"
                android:textColor="@color/blue_on_surface"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />

            <ImageButton
                android:id="@+id/add_bookmark_button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/add"
                android:padding="12dp"
                android:src="@drawable/outline_edit_24"
                app:tint="@color/blue_on_tertiary" />

            <ImageButton
                android:id="@+id/edit_bookmarks_button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/edit"
                android:padding="12dp"
                android:src="@drawable/round_edit_note_24"
                app:tint="@color/blue_on_tertiary" />
        </LinearLayout>

        <TextView
            android:id="@+id/bookmarks_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/bookmarks"
            android:textColor="@color/blue_on_surface"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bookmarks_top_buttons" />

        <LinearLayout
            android:id="@+id/bookmarks_category_buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bookmarks_title">

            <Button
                android:id="@+id/page_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:text="@string/page"
                android:textColor="@color/blue_on_surface" />

            <Button
                android:id="@+id/title_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:text="@string/title"
                android:textColor="@color/blue_on_surface" />

            <Button
                android:id="@+id/flags_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:text="@string/flags"
                android:textColor="@color/blue_on_surface" />

            <Button
                android:id="@+id/toc_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/toc"
                android:textColor="@color/blue_on_surface" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bookmarks_recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bookmarks_category_buttons" />

        <!-- Resize handle -->
        <View
            android:id="@+id/bookmarks_resize_handle"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@color/blue_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Setlist Sidebar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setlist_sidebar"
        android:layout_width="320dp"
        android:layout_height="0dp"
        android:background="@color/blue_background"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Setlist Top Buttons -->
        <LinearLayout
            android:id="@+id/setlist_top_buttons"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/setlist_title_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="@string/setlist"
                android:textColor="@color/blue_on_surface"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/add_setlist_button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/add"
                android:padding="12dp"
                android:src="@drawable/round_add_24"
                app:tint="@color/blue_on_tertiary" />

            <ImageButton
                android:id="@+id/edit_setlist_button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/edit"
                android:padding="12dp"
                android:src="@drawable/outline_edit_24"
                app:tint="@color/blue_on_tertiary" />
        </LinearLayout>

        <TextView
            android:id="@+id/setlist_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/setlist"
            android:textColor="@color/blue_on_surface"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setlist_top_buttons" />

        <LinearLayout
            android:id="@+id/setlist_category_buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setlist_subtitle">

            <Button
                android:id="@+id/manual_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue_background"
                android:text="@string/manual"
                android:textColor="@color/blue_on_surface" />

            <Button
                android:id="@+id/setlist_title_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue_background"
                android:text="@string/edit"
                android:textColor="@color/blue_on_surface" />

            <Button
                android:id="@+id/fresh_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/blue_background"
                android:text="@string/fresh"
                android:textColor="@color/blue_on_surface" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/setlist_recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setlist_category_buttons" />

        <!-- Resize handle -->
        <View
            android:id="@+id/setlist_resize_handle"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@color/blue_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Page Options Menu -->
    <androidx.cardview.widget.CardView
        android:id="@+id/page_options_menu"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/share_pdf_option"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/share_pdf"
                android:textColor="@color/blue_on_surface"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/page_properties_option"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/page_properties"
                android:textColor="@color/blue_on_surface"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/show_in_library_option"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/show_in_library"
                android:textColor="@color/blue_on_surface"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/new_tab_option"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/new_tab"
                android:textColor="@color/blue_on_surface"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/new_window_option"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/new_window"
                android:textColor="@color/blue_on_surface"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/add_to_setlist_option"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/add_to_setlist"
                android:textColor="@color/blue_on_surface"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/delete_option"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/delete"
                android:textColor="@color/blue_error"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Tools Menu Sidebar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tools_sidebar"
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:background="@color/blue_background"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tools_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/tools"
            android:textColor="#404040"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tools_recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tools_title" />

        <!-- Resize handle -->
        <View
            android:id="@+id/tools_resize_handle"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@color/blue_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Search Dialog -->
    <androidx.cardview.widget.CardView
        android:id="@+id/search_dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:visibility="gone"
        app:cardCornerRadius="10dp"
        android:background="@color/blue_background"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="400dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/search"
                android:textColor="@color/blue_on_surface"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/search_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/blue_outline"
                android:hint="@string/enter_search_term"
                android:padding="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="end"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancel_search_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/blue_background"
                    android:text="@string/cancel"
                    android:textColor="@color/blue_on_surface" />

                <Button
                    android:id="@+id/submit_search_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue_background"
                    android:text="@string/search"
                    android:textColor="@color/blue_on_surface" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.motion.widget.MotionLayout>