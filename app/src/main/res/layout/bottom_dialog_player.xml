<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_shape"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:src="@drawable/round_remove_24"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/colorSecondary"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="73dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/trackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/name_placeholder"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/trackTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:text="@string/time_placeholder"
            android:textSize="20sp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/btnPrevTrack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="112dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/previous_track"
        android:src="@drawable/round_arrow_back_ios_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
 />

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youTunePlayer"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="84dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Placeholder image for audio files (same size/location as YouTube view) -->
    <ImageView
        android:id="@+id/audioArtwork"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="84dp"
        android:contentDescription="@string/artwork"
        android:scaleType="fitCenter"
        android:src="@drawable/artwork"
        android:baseline="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Loading indicator shown while YouTube track is buffering/loading -->
    <ProgressBar
        android:id="@+id/youtubeLoading"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/audioArtwork"
        app:layout_constraintTop_toTopOf="@id/audioArtwork"
        app:layout_constraintEnd_toEndOf="@id/audioArtwork"
        app:layout_constraintBottom_toBottomOf="@id/audioArtwork"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderTracks"
        style="@style/Widget.Material3.Slider"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        app:labelBehavior="gone"
        app:trackStopIndicatorSize="5dp"
        app:trackHeight="10dp"
        app:thumbColor="?attr/colorSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/audioArtwork" />

    <ImageView
        android:id="@+id/btnNextTrack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="112dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/next_track"
        android:src="@drawable/round_arrow_forward_ios_24"
        app:layout_constraintStart_toEndOf="@+id/audioArtwork"
        app:layout_constraintTop_toTopOf="parent"
 />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderTime"
        style="@style/Widget.Material3.Slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="16dp"
        app:labelBehavior="gone"
        app:thumbColor="?attr/colorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sliderTracks"
        android:backgroundTint="?attr/colorSecondary"
        app:trackHeight="10dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.slider.Slider
                android:id="@+id/volumeSlider"
                style="@style/Widget.MaterialComponents.Slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:labelBehavior="gone"
                app:thumbColor="?attr/colorSecondary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnRestart"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/reset_button"
                android:src="@drawable/round_fast_rewind_24" />

            <ImageView
                android:id="@+id/btnPlay"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/play_button"
                android:src="@drawable/round_play_arrow_24"
                />

            <ImageView
                android:id="@+id/btnPause"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/pause_button"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/round_pause_24"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>